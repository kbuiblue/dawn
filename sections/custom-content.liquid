<h2>{{ section.settings.title }}</h2>

{% if product.metafields.custom.country.value != blank %}
    <p>Made in {{ product.metafields.custom.country.value }}</p>
{% endif %}


{% for block in section.blocks %}
    {% case block.type %}
        {% when 'liquid' %}
            <div {{ block.shopify_attributes }}>
                {{ block.settings.liquid }}
            </div>
        {% when 'custom-text' %}
            <div {{ block.shopify_attributes }}>
                {{ block.settings.custom-text }}
            </div>
    {% endcase %}
{% endfor %}


{% schema %}
{
  "name": "Custom Content",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Custom content heading",
      "default": "Hello world"
    }
  ],
  "presets": [
    {
      "name": "Custom Content"
    }
  ],
  "blocks": [
    {
      "name": "Custom Liquid",
      "type": "liquid",
      "settings": [
        {
          "type": "liquid",
          "id": "liquid",
          "label": "Custom Liquid",
          "info": "Add Liquid code to create theme customizations."
        }
      ]
    },
    {
      "name": "Custom Text",
      "type": "custom-text",
      "settings": [
        {
          "type": "textarea",
          "id": "custom-text",
          "label": "Text Area",
          "default": "Enter your text here..."
        }
      ]
    }
  ]
}
{% endschema %}
